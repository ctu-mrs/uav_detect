<launch>

  <arg name="uav_name" default="$(optenv UAV_NAME uav)"/>

  <arg name="debug" default="false" />
  <arg unless="$(arg debug)" name="launch_prefix" value=""/>
  <arg     if="$(arg debug)" name="launch_prefix" value="gdb -ex run --args"/>

  <arg name="simulation" default="$(optenv SIMULATION false)" />
  <arg unless="$(arg simulation)" name="depthmap_topic" value="/$(arg uav_name)/rs_d435/aligned_depth_to_color/image_raw"/>
  <arg     if="$(arg simulation)" name="depthmap_topic" value="/$(arg uav_name)/realsense/camera/depth/image_raw"/>
  <arg unless="$(arg simulation)" name="rgb_topic" value="/$(arg uav_name)/rs_d435/color/image_rect_color"/>
  <arg     if="$(arg simulation)" name="rgb_topic" value="/$(arg uav_name)/realsense/camera/color/image_raw"/>

  <group ns="$(arg uav_name)">
    
    <node pkg="uav_detect" name="uav_display" type="dbg_display_node" output="screen" launch-prefix="$(arg launch_prefix)" >

      <remap from="~depthmap" to="$(arg depthmap_topic)" />
      <remap from="~rgb_img" to="$(arg rgb_topic)" />
      <remap from="~blob_detections" to="/$(arg uav_name)/uav_detection/blob_detections" />
      <remap from="~processed_depthmap" to="/$(arg uav_name)/uav_detection/processed_depthmap" />

    </node>

  </group>

</launch>
