<launch>

  <arg name="uav_name" default="$(optenv UAV_NAME uav)"/>

  <group ns="$(arg uav_name)">
    
    <node pkg="uav_detect" name="uav_detection" type="filter_single" output="screen" launch-prefix="gdb -ex run --args"  >
      
      <rosparam file="$(find uav_detect)/config/filter_single.yaml" />
      <param name="uav_name" value="$(arg uav_name)" />
    
      <remap from="~depth_map" to="/$(arg uav_name)/rs_d435/depth/image_rect_raw" />
      <remap from="~camera_info" to="/$(arg uav_name)/rs_d435/depth/camera_info" />

    </node>
  
  </group>

</launch>
