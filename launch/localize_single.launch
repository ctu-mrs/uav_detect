<launch>

  <arg name="uav_name" default="$(optenv UAV_NAME uav)"/>

  <arg name="debug" default="false" />
  <arg unless="$(arg debug)" name="launch_prefix" value=""/>
  <arg     if="$(arg debug)" name="launch_prefix" value="gdb -ex run --args"/>

  <arg name="simulation" default="$(optenv SIMULATION false)" />
  <arg unless="$(arg simulation)" name="config_file" value="$(find uav_detect)/config/localization_params_F550.yaml"/>
  <arg     if="$(arg simulation)" name="config_file" value="$(find uav_detect)/config/sim_localization_params_F550.yaml"/>
  <arg unless="$(arg simulation)" name="cinfo_topic" value="/$(arg uav_name)/rs_d435/aligned_depth_to_color/camera_info/"/>
  <arg     if="$(arg simulation)" name="cinfo_topic" value="/$(arg uav_name)/realsense/camera/depth/camera_info/"/>


  <group ns="$(arg uav_name)">
    
    <node pkg="nodelet" type="nodelet" name="uav_localization" args="standalone uav_detect/LocalizeSingle" output="screen" launch-prefix="$(arg launch_prefix)" >
      
      <rosparam file="$(arg config_file)" />
      <param name="uav_name" value="$(arg uav_name)" />
    
      <remap from="~detections" to="/$(arg uav_name)/uav_detection/detections" />
      <remap from="~camera_info" to="$(arg cinfo_topic)" />

    </node>
  
  </group>

</launch>
