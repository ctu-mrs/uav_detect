<launch>

  <arg name="uav_name" default="$(optenv UAV_NAME uav)"/>

  <group ns="$(arg uav_name)">
    
    <node pkg="uav_detect" name="filter_single" type="filter_single" output="screen" >
      
      <rosparam file="$(find uav_detect)/config/filter_single_sim.yaml" />
      <param name="uav_name" value="$(arg uav_name)" />
    
    </node>
  
  </group>

</launch>
