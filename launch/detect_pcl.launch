<launch>

  <arg name="uav_name" default="$(optenv UAV_NAME uav)"/>

  <arg name="debug" default="false" />
  <arg unless="$(arg debug)" name="launch_prefix" value=""/>
  <arg     if="$(arg debug)" name="launch_prefix" value="debug_roslaunch"/>

  <arg name="simulation" default="$(optenv SIMULATION false)" />
  <arg unless="$(arg simulation)" name="config_file" value="$(find uav_detect)/config/detection_params_nerian.yaml"/>
  <arg     if="$(arg simulation)" name="config_file" value="$(find uav_detect)/config/detection_params_sim.yaml"/>
  <arg unless="$(arg simulation)" name="cinfo_topic" value="/uav/rs_d435/aligned_depth_to_color/camera_info"/>
  <arg unless="$(arg simulation)" name="depthmap_topic" value="/uav/rs_d435/aligned_depth_to_color/image_raw"/>
  <!-- <arg unless="$(arg simulation)" name="pcl_topic" value="/smoke/velodyne_point_cloud"/> -->
  <arg unless="$(arg simulation)" name="pcl_topic" value="/$(arg uav_name)/points"/>
  <arg     if="$(arg simulation)" name="pcl_topic" value="/$(arg uav_name)/realsense/camera/depth/image_raw"/>

  <arg name="ignore_mask" default="$(optenv IGNORE_MASK false)" />
  <arg unless="$(arg ignore_mask)" name="mask_filename" value="$(find uav_detect)/masks/nerian_eagleone_mask.bmp"/>
  <arg     if="$(arg ignore_mask)" name="mask_filename" value=""/>

  <arg name="standalone" default="true" />
  <arg name="manager" default="detection_nodelet_manager" />
  <arg name="det_nodelet" value="uav_detect/PCLDetector" />
  <arg unless="$(arg standalone)" name="nodelet_load" value="load $(arg det_nodelet) $(arg manager)"/>
  <arg     if="$(arg standalone)" name="nodelet_load" value="standalone $(arg det_nodelet)"/>

  <group ns="$(arg uav_name)">
    
    <node pkg="nodelet" type="nodelet" name="depthmap_preproc" args="standalone uav_detect/DepthmapPreprocessor" output="screen">
      <remap from="~camera_info" to="$(arg cinfo_topic)" />
      <remap from="~depthmap" to="$(arg depthmap_topic)" />
      <remap from="~processed_depthmap" to="processed_depthmap" />
      <!-- <remap from="~points" to="$(arg pcl_topic)" /> -->
    </node>
    
    <node pkg="nodelet" type="nodelet" name="point_cloud_xyz" args="standalone depth_image_proc/point_cloud_xyz" output="screen">
      <remap from="camera_info" to="$(arg cinfo_topic)" />
      <remap from="image_rect" to="processed_depthmap" />
      <!-- <remap from="~points" to="$(arg pcl_topic)" /> -->
    </node>

    <node pkg="nodelet" type="nodelet" name="uav_detection" args="$(arg nodelet_load)" output="screen" launch-prefix="$(arg launch_prefix)">
      
      <param name="uav_name" value="$(arg uav_name)" />
      <param name="path_to_mask" value="$(arg mask_filename)" />
      <rosparam file="$(arg config_file)" />
    
      <remap from="~pcl" to="$(arg pcl_topic)" />
      <!-- <remap from="~depthmap" to="/nerian_stereo/disparity_map" /> -->

    </node>
  
  </group>

</launch>
